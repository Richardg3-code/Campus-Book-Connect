@{
    ViewData["Title"] = "Register";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-sm border-0" style="width: 450px;">
        <div class="card-header bg-success text-white text-center">
            <h4 class="mb-0"><i class="fas fa-user-plus me-2"></i>Create an Account</h4>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-warning text-center">@ViewBag.Error</div>
            }

            <form method="post" asp-action="Register">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" class="form-control" placeholder="Choose a username" required />
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" placeholder="Enter your email" required />
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" placeholder="Create a password" required />
                </div>

                <button type="submit" class="btn btn-success w-100">
                    <i class="fas fa-user-check me-2"></i>Sign Up
                </button>
            </form>

            <div class="text-center mt-3">
                <span>Already have an account?</span>
                <a asp-action="Login" class="text-decoration-none fw-semibold" style="color: #2575fc;">Login</a>
            </div>
        </div>
    </div>
</div>
