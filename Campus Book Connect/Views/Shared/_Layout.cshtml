@{
    var username = Context.Session.GetString("User");
    var currentCont = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAct = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Campus Book Connect</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        :root {
            --primary: #4A3267;
            --accent: #DE638A;
            --highlight: #F7B9C4;
            --card-bg: #F3D9E5;
            --secondary: #C6BADE;
            --success: #28a745;
            --danger: #dc3545;
            --bg: #fffafc;
            --text-dark: #2d2d2d;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--bg);
            color: var(--text-dark);
        }

        .navbar {
            background: linear-gradient(90deg, var(--primary), var(--secondary));
        }

        .navbar-brand, .nav-link {
            font-weight: 500;
        }

            .nav-link.active {
                background-color: rgba(255, 255, 255, 0.15);
                border-radius: 5px;
            }

        .navbar .nav-link:hover {
            color: var(--accent);
            transition: 0.3s;
        }

        .dropdown-menu.custom-dropdown {
            background-color: var(--primary);
        }

            .dropdown-menu.custom-dropdown .dropdown-item {
                color: white;
            }

                .dropdown-menu.custom-dropdown .dropdown-item:hover {
                    background-color: var(--accent);
                    color: white;
                }

        footer {
            background: linear-gradient(to right, var(--primary), var(--secondary));
            color: white;
            font-weight: 500;
        }

        .btn-outline-primary {
            border-color: var(--primary);
            color: var(--primary);
        }

            .btn-outline-primary:hover {
                background-color: var(--primary);
                color: white;
            }

        .btn-primary {
            background-color: var(--accent);
            border-color: var(--accent);
        }

            .btn-primary:hover {
                background-color: #c94e73;
                border-color: #c94e73;
            }

        .card {
            background-color: var(--card-bg);
            border: none;
        }

            .card:hover {
                transform: scale(1.01);
                transition: transform 0.2s ease-in-out;
            }

        a {
            color: var(--accent);
        }

            a:hover {
                color: var(--primary);
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-graduation-cap me-2"></i>Campus Book Connect
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white @(currentCont == "Home" && currentAct == "Index" ? "active" : "")"
                               asp-controller="Home" asp-action="Index"><i class="fas fa-home me-1"></i>Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(currentCont == "Marketplace" && currentAct == "Index" ? "active" : "")"
                               asp-controller="Marketplace" asp-action="Index"><i class="fas fa-book me-1"></i>Marketplace</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(currentCont == "Marketplace" && currentAct == "Sell" ? "active" : "")"
                               asp-controller="Marketplace" asp-action="Sell"><i class="fas fa-plus-circle me-1"></i>Sell a Book</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle me-1"></i>Welcome, @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end custom-dropdown" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-controller="User" asp-action="Profile"><i class="fas fa-user me-2"></i>Profile</a></li>
                                    <li><a class="dropdown-item" asp-controller="Marketplace" asp-action="Sell"><i class="fas fa-book-medical me-2"></i>Make a Listing</a></li>
                                    <li><a class="dropdown-item" asp-controller="Transaction" asp-action="History"><i class="fas fa-clock-rotate-left me-2"></i>Transaction History</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a href="#" class="dropdown-item" data-logout>
                                            <i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="User" asp-action="Login"><i class="fas fa-sign-in-alt me-1"></i>Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- ✅ This is what fixes your error -->
    <main role="main" class="container py-4">
        @RenderBody()
    </main>

    <footer class="mt-5">
        <div class="container text-center py-3">
            &copy; @DateTime.Now.Year - Campus Book Connect
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Optional: SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function showToast(message, type = 'success') {
            Swal.fire({
                toast: true,
                position: 'top-end',
                icon: type,
                title: message,
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true
            });
        }
    </script>

    @RenderSection("Scripts", required: false)

    <form id="logoutForm" asp-area="" asp-controller="User" asp-action="Logout" method="post" style="display:none">
        @Html.AntiForgeryToken()
    </form>
    <script>
        document.addEventListener('click', function (e) {
            // Any element with data-logout will submit the POST form
            const t = e.target.closest('[data-logout]');
            if (t) {
                e.preventDefault();
                const f = document.getElementById('logoutForm');
                if (f) f.submit();
            }
        });
    </script>

</body>
</html>
