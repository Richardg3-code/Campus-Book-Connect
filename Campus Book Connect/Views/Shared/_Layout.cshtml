@{
    var username = Context.Session.GetString("User");
    var currentCont = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAct = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Campus_Book_Connect</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        .dropdown-menu.custom-dropdown {
            background-color: #0d6efd;
        }

            .dropdown-menu.custom-dropdown .dropdown-item {
                color: white;
            }

                .dropdown-menu.custom-dropdown .dropdown-item:hover,
                .dropdown-menu.custom-dropdown .dropdown-item:focus {
                    background-color: #0056b3;
                    color: white;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Campus Book Connect</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white @(currentCont == "Home" && currentAct == "Index" ? "active" : "")"
                               asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(currentCont == "Marketplace" && currentAct == "Index" ? "active" : "")"
                               asp-controller="Marketplace" asp-action="Index">Marketplace</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(currentCont == "Marketplace" && currentAct == "Sell" ? "active" : "")"
                               asp-controller="Marketplace" asp-action="Sell">Sell a Book</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white @(currentCont == "Trade" ? "active" : "")"
                               asp-controller="Trade" asp-action="Index">Trade Center</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (!string.IsNullOrEmpty(username))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Welcome, @username
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end custom-dropdown" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-controller="User" asp-action="Profile">Profile</a></li>
                                    <li><a class="dropdown-item" asp-controller="Marketplace" asp-action="Index">Make a Listing</a></li>
                                    <li><a class="dropdown-item" asp-controller="Trade" asp-action="Index">Transaction History</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-controller="User" asp-action="Logout">Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="User" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container mt-4">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; @DateTime.Now.Year - Campus Book Connect
        </div>
    </footer>

    <!-- Bootstrap JS (with Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
