@model IEnumerable<Campus_Book_Connect.Models.BookTable.Book>

@{
    ViewData["Title"] = "My Listings";
}

<h2 class="mb-4">📚 My Listings</h2>

@if (!Model.Any())
{
    <div class="text-center text-muted">
        <i class="fas fa-folder-open fa-2x mb-2" style="color: var(--primary);"></i>
        <p>You haven’t listed any books yet.</p>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var book in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text"><strong>Author:</strong> @book.Author</p>
                        <p class="card-text"><strong>Price:</strong> $@book.Price</p>
                        <p class="card-text text-muted"><strong>Description:</strong> @book.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
}
