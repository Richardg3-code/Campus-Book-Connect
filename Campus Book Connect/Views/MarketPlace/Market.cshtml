@model IEnumerable<Campus_Book_Connect.Models.BookTable.Book>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Marketplace";
}

<h2 class="mb-4">📚 Marketplace</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
    <script>
        if (typeof cart !== 'undefined') {
            cart = [];
            document.getElementById('cartItems').innerHTML = '<li class="list-group-item text-muted">No items in cart yet.</li>';
            document.getElementById('totalPrice').innerHTML = '<strong>Total:</strong> $0.00';
        }
    </script>
}

@if (!Model.Any())
{
    <div class="text-center text-muted">
        <i class="fas fa-box-open fa-2x mb-2" style="color: var(--primary);"></i>
        <p>No books available right now.</p>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var book in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text"><strong>Author:</strong> @book.Author</p>
                        <p class="card-text"><strong>Price:</strong> $@book.Price</p>

                        <div class="d-flex justify-content-between">
                            <form asp-controller="Marketplace" asp-action="Buy" method="post">
                                <input type="hidden" name="bookIds" value="@book.Id" />
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-bolt me-1"></i> Buy Now
                                </button>
                            </form>

                            <button class="btn btn-primary buy-btn"
                                    data-id="@book.Id"
                                    data-title="@book.Title"
                                    data-price="@book.Price">
                                <i class="fas fa-cart-plus me-1"></i> Add to Cart
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
}

<hr class="my-5" />

<h3 class="mb-3">🛒 Your Cart</h3>
<ul id="cartItems" class="list-group mb-3 shadow-sm rounded">
    <li class="list-group-item text-muted">No items in cart yet.</li>
</ul>
<p id="totalPrice" class="fw-bold fs-5"><strong>Total:</strong> $0.00</p>

<form asp-controller="Marketplace" asp-action="Buy" method="post">
    <input type="hidden" id="bookIdsInput" name="bookIds" />
    <button id="checkoutBtn" type="submit" class="btn btn-primary mb-4">
        <i class="fas fa-credit-card me-1"></i> Checkout
    </button>
</form>

<p id="successMessage" class="text-success fw-bold" style="display: none;">
    Thanks for your purchase!
</p>

@section Scripts {
    <script src="~/js/marketplace.js"></script>
}
